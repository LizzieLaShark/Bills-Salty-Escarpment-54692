<div id="paragraphs">
  {{#each paragraphs}}
    <p>{{subInfo}}</p>
{{/each}}
</div>

<div class="subForm">
  <form action="/submit" method="post">
    Bill You are Submitting on:<br>
    <input type="text" name="billName" required><br>
    Name (either your name or the organisation you're submitting on behalf of):<br>
    <input type="text" name="name" required><br>
    Phone:<br>
    <input type="number" name="phone" required><br>
    Email:<br>
    <input type="email" name="email" required><br>
    Region:<br>
    <input type="text" name="region" required><br>
    Submission:<br>
    <input type="text" name="submission" class="subInputBox" size="100" required><br>
    <br><input type="checkbox" name="appearing" value="appear">Would you like to appear before the Select Committee?<br>
    <br><input type="submit" id="submissionSubmit" value="Enter Submission">
  </form>
</div>

<div>
  <button id="submitNow"><a href="/form">Make a Submission!</button>
</div>
